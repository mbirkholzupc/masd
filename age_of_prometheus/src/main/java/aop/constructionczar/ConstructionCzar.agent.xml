<?xml version="1.0" encoding="UTF-8"?>
<!--
	<H3>Basic non-fighting villager.</H3>

-->
<agent xmlns="http://www.activecomponents.org/jadex-bdi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.activecomponents.org/jadex-bdi
	                    http://www.activecomponents.org/jadex-bdi-${jadex_build_version}.xsd"
	name="ConstructionCzar"
	package="aop.constructionczar">

	<imports>
		<import>jadex.commons.future.*</import>
		<import>jadex.base.contextservice.*</import>
		<import>jadex.extension.envsupport.environment.space2d.*</import>
		<import>jadex.extension.envsupport.environment.*</import>
		<import>jadex.extension.envsupport.math.*</import>
		<import>jadex.bridge.IComponentIdentifier</import>
		<import>aop.constructionczar.BuildHouseHerePlan</import>
	</imports>

	<beliefs>
		<!-- Environment. -->
		<belief name="env" class="Grid2D">
 			<fact>jadex.application.EnvironmentService.getSpace($component, "my2dspace").get()</fact>
 		</belief>
 		
 		<!-- Myself. -->
 		<belief name="myself" class="ISpaceObject">
 			<fact>$beliefbase.env.getAvatar($scope.getComponentDescription(), $scope.getAgentModel().getFullName())</fact>
 		</belief>

		<belief name="mycid" class="IComponentIdentifier">
			<fact>$scope.getComponentIdentifier()</fact>
		</belief>

		<!-- Update whether housing is needed every 5 seconds doesn't work so we'll check it in a plan-->
		<belief name="need_more_houses" class="boolean">
			<fact>false</fact>
		</belief>
	</beliefs>
	
	<plans>
		<plan name="constructionczar_plan">
			<body class="ConstructionCzarPlan"/>
		</plan>
		<plan name="buildhousehere_plan">
			<body class="BuildHouseHerePlan"/>
			<trigger>
				<goal ref="maintain_housing_limit" />
			</trigger>
		</plan>
	</plans>

	<goals>
		<maintaingoal name="maintain_housing_limit" retrydelay="10000" exclude="never">
			<maintaincondition language="jcl">
				$beliefbase.need_more_houses==false
			</maintaincondition>
			<targetcondition language="jcl">
				$beliefbase.need_more_houses==false
			</targetcondition>
		</maintaingoal>
	</goals>

	<properties>
		<!-- The environment may throw exceptions when executing property listeners
			and these listeners are not valid any longer. This leads to normal plan
			failure and can therefore be ignored. -->
		<property name="logging.level">java.util.logging.Level.WARNING</property>
		<property name="debugging">false</property>
    </properties>

	<configurations>
		<configuration name="default">
			<plans>
				<initialplan ref="constructionczar_plan"/>
			</plans>
			<goals>
				<initialgoal ref="maintain_housing_limit"/>
			</goals>
		</configuration>
	</configurations>

</agent>
